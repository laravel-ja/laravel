{
    "name": "laravel-ja/laravel",
    "description": "Laravel4 comments translated in Japanese with Japanese language files.",
    "keywords": ["Japanese", "Laravel"],
    "license": "MIT",
    "authors": [
        {
            "name": "Taylor Otwell",
            "homepage": "https://github.com/taylorotwell",
            "email": "taylorotwell@gmail.com",
            "role": "Developer"
        },
        {
            "name": "Hirohisa Kawase",
            "homepage": "http://kore1server.com",
            "email": "hirokws@gmail.com",
            "role": "Translator"
        }
    ],
	"require": {
		"laravel/framework": "4.0.*",
		"hirokws/prepper": "dev-master"
	},
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		]
	},
    "scripts": {
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-install-cmd": [
            "php artisan optimize",
            "php artisan key:generate",
            "vendor/bin/prepper-start.bat"
        ],
        "post-update-cmd": [
            "php artisan optimize"
        ]
    },
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "dev"
}
